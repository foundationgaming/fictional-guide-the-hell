{% extends "layout.html.twig" %}

{% block title %}Quotemaker{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    <span id="helpBlock" class="help-block">A negative number will discount the price.  A positive number will increase the price.  A value of 0 will give the original price.</span>
    <button type="submit" class="btn btn-default">Save</button>
    {{ form_end(form) }}
{% endblock %}
