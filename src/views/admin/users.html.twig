{% extends "layout.html.twig" %}

{% block title %}Quotemaker{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <p><a class="btn btn-primary" href="/admin/newuser" role="button">New User</a></p>
    <table class="table table-hover">
        <tr>
            <th>USERNAME</th>
            <th>EMAIL</th>
            <th></th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{user.username}}</td>
                <td>{{user.email_address}}</td>
                <td><a href="/admin/edituser?id={{user.id}}" title="Edit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a href="/admin/deleteuser?id={{user.id}}" title="Edit" onclick="return confirm('Are you sure you want to delete this user?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
