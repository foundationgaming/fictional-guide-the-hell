{% extends "layout.html.twig" %}

{% block title %}Quotemaker{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <p><a class="btn btn-primary" href="/admin/newitem" role="button">New Item</a></p>
    <table class="table table-hover">
        <tr>
            <th>ITEM</th>
            <th>COST</th>
            <th></th>
            <th></th>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{item.DESCRIPTION}}</td>
                <td>{{item.FORMATTEDUNITCOST}}</td>
                <td><a href="/admin/edititem?id={{item.ID}}" title="Edit"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
                <td><a href="/admin/deleteitem?id={{item.ID}}" title="Delete" onclick="return confirm('Are you sure you want to delete this item?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
